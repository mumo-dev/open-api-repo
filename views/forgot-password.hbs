
<div class="container">

    <div class="alert alert-success d-none mt-2" id="alertMesage">

    </div>
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">Reset Password</div>
        <div class="card-body">
            <div class="text-center mb-4">
                <h4>Forgot your password?</h4>
                <p>Enter your email address and we will send you instructions on how to reset your password.</p>
            </div>
            <form>
                <div class="form-group">
                    <div class="form-label-group">
                        <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Enter email address" required="required" autofocus="autofocus">
                        <label for="inputEmail">Enter email address</label>
                    </div>
                </div>
                <a class="btn btn-primary btn-block" onclick="resetPassword()">Reset Password</a>
            </form>
            <!--<div class="text-center">
                <a class="d-block small mt-3" href="/signup">Register an Account</a>
                <a class="d-block small" href="/login">Login Page</a>
            </div>-->
        </div>
    </div>
</div>

<script>
    function resetPassword() {
       var email = $('#inputEmail').val();
       var showErrorView = $('#alertMesage');

       if(email){
           const  url = '/forgot-password?id=2';
           axios.post(url, {
               email: email
           }).then(res=>{
               console.log(res.data)
               showErrorView.removeClass('d-none');
                showErrorView.text(res.data.message);
               showErrorView.className = "d-block";
           }).catch(err=>{
               showErrorView.removeClass('d-none');
               showErrorView.text("sorry, try again");
           })
       }
    }
</script>