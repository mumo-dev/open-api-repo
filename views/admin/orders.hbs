{{> sidebar }}
<div id="content-wrapper">

    <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="">Admin</a>
            </li>
            <li class="breadcrumb-item ">Orders</li>
        </ol>

        <!-- add a menu-->
        {{#if success }}
            <div class="alert alert-success">
                {{{ success }}}
            </div>
        {{/if}}

        {{#if error }}
            <div class="alert alert-danger">
                {{{ error }}}
            </div>
        {{/if}}

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Customer Name</th>
                        <th>Customer Phone</th>
                        <th>Location</th>
                        <th>Restaurant</th>
                        <th>Items</th>
                        <th>status</th>
                        <th>Time</th>
                        <th>View</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each orders}}
                        <tr>
                            <td> {{{this.id }}}</td>
                            <td> {{{this.userName }}}</td>
                            <td> {{{this.userPhone }}}</td>
                            <td> {{{this.town }}} - {{{ this.area}}}</td>
                            <td> {{{this.restaurant }}} </td>
                            <td> {{{this.orderItems.length }}} </td>
                            {{#xif  this.status '==' 'placed'}}
                                <td class="bg-warning"> {{{this.status }}} </td>
                            {{/xif}}

                            {{#xif  this.status '==' 'processed'}}
                                <td class="bg-success">
                                    {{{this.status }}}
                                </td>
                            {{/xif}}

                            {{#xif  this.status '==' 'delivered'}}
                                <td class="bg-light"> {{{this.status }}} </td>
                            {{/xif}}

                            <td> {{{ this.createdAt }}}</td>

                            <td>
                                <a class="btn btn-outline-primary"
                                   href="/orders/{{{this.id}}}" > VIEW</a>
                            </td>

                        </tr>
                    {{/each}}
                    </tbody>


                </table>
            </div>
        </div>

    </div>
</div>